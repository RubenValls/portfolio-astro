---

{
    stacks.map((stack) => {
        return(<figure style="--c:#ffff">
            <img src={stack.img} />    
            <figcaption>{stack.title}</figcaption>
        </figure>)
    })
}


<style>
    figure {
        border-radius: 1rem;
        overflow: hidden;
        cursor: pointer;
    }
    figure img{
        height: 150px;
        width: auto;
    }
    figure > * {
        grid-area: 1/1;
        transition: 0.5s;
    }
    figure figcaption {
        display: grid;
        align-items: end;
        font-family: sans-serif;
        font-size: 2.3rem;
        font-weight: bold;
        color: #0000;
        padding: 0.75rem;
        background: var(--c, #0009);
        clip-path: inset(0 var(--_i, 100%) 0 0);
        -webkit-mask: linear-gradient(#000 0 0), linear-gradient(#000 0 0);
        -webkit-mask-composite: xor;
        -webkit-mask-clip: text, padding-box;
        margin: -1px;
    }
    figure:hover figcaption {
        --_i: 0%;
    }
    figure:hover img {
        transform: scale(1.2);
    }
    @supports not (-webkit-mask-clip: text) {
        figure figcaption {
            -webkit-mask: none;
            color: #fff;
        }
    }
</style>
