---
import IndexBanner from "./IndexBanner.astro";
import TechStack from "./TechStack.astro";

export interface Props {
  divider: string;
  segment: string;
}

const { divider, segment }: Props = Astro.props;
---

<div class={segment}>
  {divider === "divider1" 
    ? <IndexBanner /> 
    : (divider === "divider2")
      ? <TechStack/>
      : null
  }
</div>
<svg class={divider} viewBox="0 0 100 100" preserveAspectRatio="none">
  <path d="M0 0 L50 100 L100 0 Z"></path>
</svg>

<style>
  @import url("https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700");

  .divider1 {
    margin-top: 0 !important;
    width: 100%;
    height: 10vh;
    fill: #9a9a9a;
  }
  .segment1 {
    height: auto;
    background: linear-gradient(#101010, #9a9a9a);
  }

  .divider2 {
    width: 100%;
    height: 10vh;
    fill: #f0f0f0;
  }
  .segment2 {
    height: auto;
    background: linear-gradient(#bababa, #f0f0f0);
  }
</style>
