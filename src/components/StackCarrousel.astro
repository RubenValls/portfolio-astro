---

<div class="slider">
    <div class="slide-track">
        {
            stacks.map((stack) => {
                return (
                    <div class="slide">
                        <div class="tooltip">
                            <img
                            src={stack.img}
                            height="100"
                            width="100"
                            alt={stack.title}
                            />
                        <span class="tooltiptext">{stack.title}</span>
                        </div>
                    </div>
                );
            })
        }
    </div>
</div>

<style>
    @-webkit-keyframes scroll {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(calc(-250px * 6));
        }
        100% {
            transform: translateX(0);
        }
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(calc(-250px * 6));
        }
        100% {
            transform: translateX(0);
        }
    }
    .slider {
        height: 100px;
        margin: auto;
        overflow: hidden;
        position: relative;
        width: 100%;
        padding-top: 75px;
        padding-bottom: 120px;
    }
    .slider::before,
    .slider::after {
        content: "";
        height: 100px;
        position: absolute;
        width: 200px;
        z-index: 2;
    }
    .slider::after {
        right: 0;
        top: 0;
        transform: rotateZ(180deg);
    }
    .slider::before {
        left: 0;
        top: 0;
    }
    .slider .slide-track {
        -webkit-animation: scroll 40s linear infinite;
        animation: scroll 40s linear infinite;
        display: flex;
        width: calc(250px * 13);
    }
    .slider .slide {
        height: 100px;
        width: 250px;
    }
    .tooltip {
  position: relative;
  display: inline-block;
}

.tooltip .tooltiptext {
  visibility: hidden;
  width: 120px;
  background-color: #9A9A9A;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  
  /* Position the tooltip */
  position: absolute;
  z-index: 1;
  top: 100%;
  left: 50%;
  margin-left: -60px;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
</style>
