---
import image from "../assets/profileImg.png";
import SocialButtons from "./SocialButtons.astro";
---

<link
  href="https://fonts.googleapis.com/css2?family=Lato:wght@700&display=swap"
  rel="stylesheet"
/>

<div class="indexbanner-container">
  <div class="typewriter-container">
    <h1 aria-label="Hi! I'm Rubén Valls">
      Hi! I'm&nbsp;<span class="typewriter"></span>
    </h1>
  </div>
  <div class="profileImage-container">
    <img src={image} id="profileImage" alt="RubénValls" />
  </div>
  <SocialButtons/>
</div>

<style>
  .indexbanner-container {
    width: 100%;
  }

  .typewriter-container {
    width: 100%;
    height: 150px;
    padding-top: 50px;
  }

  .profileImage-container {
    text-align: center;
    margin-bottom: 50px;
  }

  @media only screen and (max-width: 1000px) {
    .profileImage-container {
      text-align: center;
      margin-bottom: 50px;
      margin-top: 20px;
    }
  }

  #profileImage {
    width: 30%;
  }

  @media only screen and (max-width: 1200px) {
    #profileImage {
      width: 80%;
    }
  }

  h1 {
    font-size: 10vmin;
    color: whitesmoke;
    text-align: center;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 50px;
    padding: 20px;
  }

  /* Typewriter effect 1 */
  @keyframes typing {
    0.0000%,
    50.0930% {
      content: "";
    }
    3.1395%,
    49.0930% {
      content: "R";
    }
    5.2791%,
    47.0930% {
      content: "Ru";
    }
    7.4186%,
    45.0930% {
      content: "Rub";
    }
    9.5581%,
    43.2326% {
      content: "Rubé";
    }
    11.6977%,
    41.3721% {
      content: "Rubén";
    }
    13.8372%,
    39.5116% {
      content: "Rubén ";
    }
    15.9767%,
    37.6512% {
      content: "Rubén V";
    }
    17.1163%,
    35.7907% {
      content: "Rubén Va";
    }
    19.2558%,
    33.9302% {
      content: "Rubén Val";
    }
    21.2558%,
    31.0698% {
      content: "Rubén Vall";
    }
    23.2558%,
    29.2093% {
      content: "Rubén Valls";
    }
    25.2558%,
    27.3488% {
      content: "Rubén Valls.";
    }

    52.7674%,
    100% {
      content: "";
    }
    54.9070%,
    99.0% {
      content: "W";
    }
    56.0465%,
    97.4419% {
      content: "Web";
    }
    58.1860%,
    96.4419% {
      content: "Web ";
    }
    60.3256%,
    94.4419% {
      content: "Web D";
    }
    62.4651%,
    93.4419% {
      content: "Web De";
    }
    64.6047%,
    91.4419% {
      content: "Web Dev";
    }
    66.6047%,
    90.4419% {
      content: "Web Deve";
    }
    68.6047%,
    89.5814% {
      content: "Web Devel";
    }
    70.6047%,
    87.7209% {
      content: "Web Develo";
    }
    72.6047%,
    85.8605% {
      content: "Web Develop";
    }
    74.6047%,
    83.0000% {
      content: "Web Develope";
    }
    75.6047%,
    81.1395% {
      content: "Web Developer";
    }
    77.6047%,
    79.2791% {
      content: "Web Developer.";
    }
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  .typewriter {
    --caret: currentcolor;
  }

  .typewriter::before {
    content: "";
    animation: typing 13.5s infinite;
  }

  .typewriter::after {
    content: "";
    border-right: 1px solid var(--caret);
    animation: blink 0.5s linear infinite;
  }

  .typewriter.thick::after {
    border-right: 1ch solid var(--caret);
  }

  .typewriter.nocaret::after {
    border-right: 0;
  }

  .social-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 200px;
    margin: auto;
    background-color: #f2f2f2;
    box-shadow: 0px 0px 15px #00000027;
    padding: 15px 10px;
    border-radius: 5em;
  }

  .social-button {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    margin: 0 10px;
    background-color: #fff;
    box-shadow: 0px 0px 4px #00000027;
    transition: 0.3s;
  }

  .social-button:hover {
    background-color: #f2f2f2;
    box-shadow: 0px 0px 6px 3px #00000027;
  }

  .social-buttons svg {
    transition: 0.3s;
    height: 20px;
  }

  .github {
    background-color: #333;
  }

  .github svg {
    width: 25px;
    height: 25px;
    fill: #f2f2f2;
  }

  .github:hover svg {
    fill: #333;
  }

  .linkedin {
    background-color: #0077b5;
  }

  .linkedin svg {
    fill: #f2f2f2;
  }

  .linkedin:hover svg {
    fill: #0077b5;
  }
</style>
