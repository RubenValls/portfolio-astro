<style>
  .indexbanner-container {
    width: 100%;
  }

  .typewriter-container {
    width: 100%;
    padding-top: 50px;
  }

  .profileImage-container{
    text-align: center;
    margin-bottom: 50px;
  }

  #profileImage {
    width: 30%;
  }

  @media only screen and (max-width: 1200px) {
  #profileImage {
    width: 80%;
  }
}

  h1 {
    font-size: 10vmin;
    color: whitesmoke;
    text-align: center;
    font-family: Lato, sans-serif;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 50px;
  }

  /* Typewriter effect 1 */
